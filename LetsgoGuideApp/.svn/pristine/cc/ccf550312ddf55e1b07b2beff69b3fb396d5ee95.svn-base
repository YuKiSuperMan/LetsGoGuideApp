                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/service_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请输入价格"
                        app:titles="价格"
                        tools:visibility="visible"></com.njz.letsgoappguides.customview.widget.MineTextView>

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/ll_service_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请选择城市"
                        app:right_img_visible="true"
                        app:titles="城市"></com.njz.letsgoappguides.customview.widget.MineTextView>

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/ll_service_notime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请输入非空闲时间（非必填）"
                        app:right_img_visible="true"
                        app:titles="非空闲时间"></com.njz.letsgoappguides.customview.widget.MineTextView>

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/ll_service_ind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请对您提供的服务信息进行详细说明"
                        app:right_img_visible="true"
                        app:titles="服务特色"></com.njz.letsgoappguides.customview.widget.MineTextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/tv_qianming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="费用说明" />

                        <EditText
                            android:id="@+id/ll_service_priceinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_qianming"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/person_et_style"
                            android:gravity="top"
                            android:hint="请详细说明相关费用信息"
                            android:lines="6"
                            android:padding="10dp"
                            android:src="@mipmap/my_add"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="违约金设置"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="向导确认订单前不收取违约金；"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_textid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="行程开始前"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edit_text_1"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/add_service_green"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="4"
                                android:textColor="@color/color_green"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="至"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edit_text_2"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/add_service_green"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="7"
                                android:textColor="@color/color_green"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="日取消订单，收取游客"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="已付费用30%的违约金；"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_textid2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="行程开始前"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edit_text_3"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/add_service_red"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="1"
                                android:textColor="@color/color_red"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="至"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edit_text_4"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/add_service_red"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="3"
                                android:textColor="@color/color_red"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="日取消订单，收取游客"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="已付费用50%的违约金；"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="行程开始当天取消订单，收取游客已付费用100%的违约金；"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:text="行程开始前其他时间取消订单，不收取违约金。"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/serve_btn_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/service_btn_style_blue"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/serve_btn_save_sub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/login_btn_style"
                android:gravity="center"
                android:text="保存并上架"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>