<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        >
        <ImageView
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            />

        <TextView
            android:id="@+id/title_tv"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方案设计"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/frame_bottom"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/desingn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:titles="方案标题"
                        app:center_edit_hint="请输入方案标题"
                        app:bottom_lines_visible="true"
                        ></com.njz.letsgoappguides.customview.widget.MineTextView>
                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/desingn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:titles="行程时间"
                        app:center_edit_hint="请输入行程时间"
                        app:bottom_lines_visible="true"
                        ></com.njz.letsgoappguides.customview.widget.MineTextView>
                    <!--<com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/desingn_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:titles="最终报价"
                        app:center_edit_hint="请输入最终报价"
                        app:bottom_lines_visible="true"
                        ></com.njz.letsgoappguides.customview.widget.MineTextView>-->
                    <RelativeLayout
                        android:id="@+id/rl_id"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white"
                        >
                        <TextView
                            android:id="@+id/text_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="最终报价"
                            />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_marginLeft="80dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_theme"
                            android:text="￥"/>
                        <EditText
                            android:layout_toRightOf="@+id/tv_price"
                            android:textColor="@color/color_theme"
                            android:layout_marginLeft="2dp"
                            android:layout_centerVertical="true"
                            android:inputType="text"
                            android:lines="1"
                            android:id="@+id/desingn_price"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入最终报价"
                            />
                        <ImageView
                            android:id="@+id/bottom_view1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:background="@drawable/lines" />
                    </RelativeLayout>
                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/ll_desingn_scheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:titles="行程设计"
                        app:center_edit_hint="请根据游客提供的需求单对整个行程进行设计"
                        app:right_img_visible="true"
                        app:bottom_lines_visible="true"
                        ></com.njz.letsgoappguides.customview.widget.MineTextView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/tv_qianming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="报价明细" />

                        <EditText
                            android:id="@+id/ll_desingn_priceinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_qianming"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/person_et_style"
                            android:gravity="top"
                            android:hint="请对整个过程产生的费用明细进行详细说明。如：报价类目、数量、使用日期等。"
                            android:lines="9"
                            android:padding="10dp"
                            android:src="@mipmap/my_add"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="违约金设置"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="向导确认订单前不收取违约金；"
                            android:textSize="14sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_textid"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="行程开始前"
                                android:textSize="14sp"
                                />
                            <EditText
                                android:inputType="number"
                                android:id="@+id/edit_text_1"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="4"
                                android:background="@drawable/add_service_green"
                                android:textColor="@color/color_green"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="至"
                                android:textSize="14sp"
                                />
                            <EditText
                                android:inputType="number"
                                android:id="@+id/edit_text_2"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="7"
                                android:background="@drawable/add_service_green"
                                android:textColor="@color/color_green"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="日取消订单，收取游客"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="已付费用30%的违约金；"
                            android:textSize="14sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_textid2"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="行程开始前"
                                android:textSize="14sp"
                                />
                            <EditText
                                android:inputType="number"
                                android:id="@+id/edit_text_3"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="1"
                                android:background="@drawable/add_service_red"
                                android:textColor="@color/color_red"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="至"
                                android:textSize="14sp"
                                />
                            <EditText
                                android:inputType="number"
                                android:id="@+id/edit_text_4"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="3"
                                android:background="@drawable/add_service_red"
                                android:textColor="@color/color_red"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日取消订单，收取游客"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="已付费用30%的违约金；"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="行程开始当天取消订单，收取游客已付费用100%的违约金；"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="行程开始前其他时间取消订单，不收取违约金。"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

        <TextView
            android:id="@+id/desingn_btn_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/btn_theme_solid_r3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>