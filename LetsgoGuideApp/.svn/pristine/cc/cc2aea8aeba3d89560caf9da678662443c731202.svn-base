<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.njz.letsgoappguides.ui.activites.mysetting.FeedbackActivity">

    <include layout="@layout/base_title_layout"></include>
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/card_view_bg_10"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_que"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题和意见"
            android:textSize="16sp"/>

        <EditText
            android:textSize="14sp"
            android:textColor="@color/gray_999"
            android:id="@+id/feekback_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_que"
            android:maxLength="200"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="我们期待您的反馈"
            android:lines="6"
            android:maxLines="6" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_999"
            android:layout_below="@+id/feekback_et_id"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="200" />
    </RelativeLayout>
</FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/card_view_bg_10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="8dp"
            >

            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式:(必填）" />

            <EditText
                android:textSize="14sp"
                android:textColor="@color/gray_999"
                android:id="@+id/feekback_et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contact"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:hint="手机号码/QQ号/邮箱"
                android:lines="1" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/card_view_bg_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_service_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选取你遇到问题的图片（选填）" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <include layout="@layout/base_recycler_view_layout"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/feedback_in_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_px_40"
        android:text="提交"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_style"/>


</LinearLayout>
