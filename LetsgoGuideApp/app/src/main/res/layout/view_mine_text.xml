<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_id"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
            >
        <TextView
            android:id="@+id/text_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="绑定手机"
            />
        <EditText
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:lines="1"
            android:id="@+id/et_text"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请"
            />
        <ImageView
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerInParent="true"
            android:id="@+id/text_iv_moreb"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_more" />
        <TextView
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerInParent="true"
            android:textColor="@color/gray_999"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/text_iv_moreb"
            android:layout_centerVertical="true"
            android:id="@+id/text_tvCheckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="按日期调价"
            android:id="@+id/text_tv_backcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_theme_solid_r3"
            android:textColor="@color/white" />
        <ImageView
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/bottom_view1"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/lines" />
</RelativeLayout>