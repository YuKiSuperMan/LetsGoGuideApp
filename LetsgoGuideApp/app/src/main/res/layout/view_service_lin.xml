<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/service_lin_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_margin="2dp"
                            android:id="@+id/rl_id1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            >
                                <ImageView
                                    tools:visibility="visible"
                                    android:visibility="gone"
                                    android:padding="5dp"
                                    android:id="@+id/iv_image1"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/my_more" />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/group_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/tv_title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="绑定手机"
                                    />
                                <EditText
                                    android:id="@+id/et_editid1"
                                    android:layout_marginLeft="80dp"
                                    android:layout_centerVertical="true"
                                    android:lines="1"
                                    android:layout_marginRight="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="请输入默认价格"
                                    />
                        </RelativeLayout>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/bottom_view1"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/lines" />
                        <RelativeLayout
                            android:layout_margin="2dp"
                            android:id="@+id/rl_id2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white">
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/tv_title2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="绑定手机"
                                    />
                                <EditText
                                    android:layout_marginLeft="80dp"
                                    android:layout_centerVertical="true"
                                    android:lines="1"
                                    android:id="@+id/et_editid2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="请输入默认价格"
                                    android:layout_toLeftOf="@+id/tv_text2"
                                    />
                                <TextView
                                    android:layout_marginRight="5dp"
                                    android:id="@+id/tv_text2"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp"
                                    android:textSize="12sp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="按日期调价"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_theme_solid_r3"
                                    android:textColor="@color/white" />
                        </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/service_lin_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>
</LinearLayout>
