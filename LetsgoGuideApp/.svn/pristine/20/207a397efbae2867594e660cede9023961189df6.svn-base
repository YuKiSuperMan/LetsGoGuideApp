<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="0.5dp" android:left="0.5dp"
        android:right="0.5dp" android:top="0.5dp"><!--设置边框-->
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="2dp"></corners><!-- 圆角 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/color_red">
            </stroke><!-- 定义描边的宽度和描边的颜色值 -->
        </shape>
    </item>
</layer-list>