                <LinearLayout
                    android:id="@+id/ll_langage_id1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--<com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/service_lanage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:titles="服务语言"
                        app:center_edit_hint="请选择服务语言"
