<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="38dp"
    android:layout_marginRight="38dp"
    android:background="@drawable/reg_bottom_line"
    android:orientation="horizontal">

    <EditText
        android:scrollbars="horizontal"
        android:id="@+id/register_item_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:paddingTop="10dp"
        android:background="@color/transparent"
        android:textSize="14sp"
        android:textColorHint="@color/color_99"
        android:hint="@string/input_phone" />

    <TextView
        android:visibility="gone"
        android:layout_marginRight="@dimen/x_px_10"
        android:id="@+id/register_item_btn"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/x_px_24"
        android:background="@color/color_d9"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/register_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_theme"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/input_get_card"
        android:textSize="14sp"
        android:layout_gravity="center" />



</LinearLayout>