<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/card_view_bg_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_99"
            tools:text="asdjhfkj234234"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="总额：" />

            <TextView
                android:id="@+id/tv_order_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2600"
                android:textColor="@color/color_red"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_settle_id"
        android:visibility="gone"
        android:background="@drawable/btn_theme_hollow_r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="@color/color_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待结算日期"/>
            <TextView
                android:id="@+id/tv_settle_date"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-07-15"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/color_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待结算金额"/>
            <TextView
                android:id="@+id/tv_settle_money"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥3506"/>
        </RelativeLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/foot_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <!--<TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/btn_remarks"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:background="@drawable/btn_theme_hollow_r3_p5"
                android:textColor="@color/color_theme"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="备注" />-->

            <TextView
                android:id="@+id/btn_refuse_order"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_red_hollow_r3_p5"
                android:gravity="center"
                android:textColor="@color/color_red"
                android:text="拒绝" />

            <TextView
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:minWidth="70dp"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_hollow_r3_p5"
                android:textColor="@color/color_theme"
                android:drawableLeft="@mipmap/ic_call_user"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="联系TA" />

            <TextView
                android:id="@+id/btn_confirm_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:background="@drawable/btn_theme_solid_r3_p5"
                android:gravity="center"
                android:text="确认接单"
                android:textColor="@color/white" />

            <TextView
                android:visibility="gone"
                android:id="@+id/btn_desingn_scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:background="@drawable/btn_theme_solid_e7"
                android:gravity="center"
                android:text="设计方案"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_solid_r3_p5"
                android:gravity="center"
                android:text="确认退款"
                android:textSize="13dp"
                android:textColor="@color/white" />

            <TextView
                android:visibility="gone"
                android:id="@+id/btn_view_desingn_scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_solid_e7"
                android:gravity="center"
                android:text="查看方案"
                android:textSize="13dp"
                android:textColor="@color/white" />

        </LinearLayout>



    </HorizontalScrollView>


</LinearLayout>