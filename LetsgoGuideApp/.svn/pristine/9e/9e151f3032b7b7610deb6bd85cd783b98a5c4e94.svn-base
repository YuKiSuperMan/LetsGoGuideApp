<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.njz.letsgoappguides.ui.activites.mine.BindIdcarActivity">

    <include layout="@layout/base_title_layout"></include>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_bg_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffecec"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_warning"
                />
            <TextView
                android:id="@+id/tv_names"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_ff0101"
                android:textSize="12sp"
                android:text="您实名认证的姓名是张三，您只能绑定张三的银行卡卡号。"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <TextView
                android:gravity="right"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="卡号："/>
            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/person_et_style"
                android:hint="仅限储蓄卡卡号"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="手机号码："/>
            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/person_et_style"
                android:hint="请输入银行预留手机号码"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/tv_bink_title"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="开户银行："
                android:layout_centerVertical="true"/>
            <EditText
                android:layout_toRightOf="@id/tv_bink_title"
                android:id="@+id/et_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/person_et_style"
                android:hint="请选择开户银行"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_more"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="开户支行："/>
            <EditText
                android:id="@+id/et_bink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/person_et_style"
                android:hint="请输入开户支行"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="26dp"
            >
            <TextView
                android:id="@+id/tv_idcard_save"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="48dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/login_btn_style"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_idcard_reset"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="48dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/save_btn_style"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/color_text"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
