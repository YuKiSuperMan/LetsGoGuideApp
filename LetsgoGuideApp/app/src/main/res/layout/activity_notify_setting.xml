<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.njz.letsgoappguides.customview.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:TitleView_left_img="@mipmap/icon_back"
        app:TitleView_title="消息接收提醒" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/ll_bottom"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_ptqxwyj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="平台取消违约金提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_dqddd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="待确认订单提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_pj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="评价提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="退款提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_xc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="行程提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_ddzdqx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:MsgSettingView_title="订单自动取消提醒" />

                <com.njz.letsgoappguides.customview.widget.MsgSettingView
                    android:id="@+id/msgSettingView_tkzdqr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:MsgSettingView_title="退款自动确认提醒" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_bottom"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_32_hollow_r40"
                    android:gravity="center"
                    android:text="重置">


                </TextView>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme_solid_r40"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white">


                </TextView>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>