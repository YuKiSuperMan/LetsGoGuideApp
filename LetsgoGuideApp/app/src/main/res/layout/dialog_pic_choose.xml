<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_33"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_below="@+id/tb_choose_pic"
            android:id="@+id/bt_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_hollow_r10_bottom"
            android:text="取消选择"
            android:textColor="@color/color_red"
            android:textSize="11sp" />


        <Button
            android:layout_centerInParent="true"
            android:id="@+id/tb_choose_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="相册选择"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <View
            android:layout_below="@id/tb_choose_pic"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"></View>

        <Button
            android:id="@+id/bt_tack_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tb_choose_pic"
            android:background="@drawable/btn_white_hollow_r10_top"
            android:text="拍照"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <View
            android:layout_below="@id/bt_tack_pic"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"></View>
    </RelativeLayout>

</RelativeLayout>