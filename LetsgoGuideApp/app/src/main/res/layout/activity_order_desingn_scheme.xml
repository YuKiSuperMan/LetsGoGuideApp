<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="方案设计"
            android:textSize="16sp" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="@dimen/frame_bottom"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/desingn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请输入方案标题"
                        app:titles="方案标题" />

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/desingn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请输入行程时间"
                        app:titles="行程时间" />

                    <RelativeLayout
                        android:id="@+id/rl_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/text_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="最终报价" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="80dp"
                            android:text="￥"
                            android:textColor="@color/color_theme" />

                        <EditText
                            android:id="@+id/desingn_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/tv_price"
                            android:background="@null"
                            android:hint="请输入最终报价"
                            android:inputType="text"
                            android:lines="1"
                            android:textColor="@color/color_theme" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/color_d9" />

                    <com.njz.letsgoappguides.customview.widget.MineTextView
                        android:id="@+id/ll_desingn_scheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bottom_lines_visible="true"
                        app:center_edit_hint="请根据需求单编辑行程设计"
                        app:right_img_visible="true"
                        app:titles="行程设计" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="15dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/tv_qianming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="报价明细" />

                        <EditText
                            android:id="@+id/ll_desingn_priceinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_qianming"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/person_et_style"
                            android:gravity="top"
                            android:hint="请对整个行程中产生的费用明细进行详细说明，如：\n1、当地四星酒店\n    使用日期：XX月XX日    3间四晚\n2、张家界天门山门票\n    使用日期：XX月XX日    5张\n3、12座商务车\n    使用日期：XX月XX日-  XX月XX日    3天\n4、向导服务费\n    使用日期：XX月XX日-  XX月XX日    3天"
                            android:lines="9"
                            android:padding="10dp"
                            android:src="@mipmap/my_add"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <!--退订条款-->
                <include layout="@layout/layout_add_services_refund" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9" />

        <TextView
            android:id="@+id/desingn_btn_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_theme_solid_r3"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>