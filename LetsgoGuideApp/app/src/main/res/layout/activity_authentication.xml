<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/base_title_layout"></include>
    <android.support.v4.widget.NestedScrollView
        android:overScrollMode="never"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/ll_auth_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <com.njz.letsgoappguides.customview.widget.MineEditView
                android:id="@+id/met_auth_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:per_title="姓名"
                app:per_hint="请输入您的真实姓名" />
            <com.njz.letsgoappguides.customview.widget.MineEditView
                android:id="@+id/met_auth_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:per_title="身份证号"
                app:per_hint="请输入您的身份证号" />
            <com.njz.letsgoappguides.customview.widget.MineEditView
                android:id="@+id/met_auth_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:per_title="性别"
                app:per_hint="根据身份证号自动提取" />
            <com.njz.letsgoappguides.customview.widget.MineEditView
                android:id="@+id/met_auth_bir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:per_title="出生日期"
                app:per_hint="根据身份证号自动提取" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手持身份证照片"
                    />
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/auth_id_img"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/auth_card_clone"
                        android:layout_marginRight="30dp"
                        />
                    <TextView
                        android:textColor="@color/color_99"
                        android:id="@+id/tv_tips"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/auth_id_img"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auth_text"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证照片"
                    />
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/auth_iv_zheng"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/auth_positive"
                        />
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/auth_iv_zheng"
                        android:id="@+id/auth_iv_back"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/auth_back"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bu_auth_to"
                android:gravity="center"
                android:layout_marginTop="53dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/login_btn_style"
                android:text="提交"/>
        </LinearLayout>

        <include layout="@layout/activity_authentication_nopass"></include>
        <include layout="@layout/activity_authentication_ing"></include>
    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>